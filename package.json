{
  "name": "gitCommandsConstructor",
  "displayName": "Git Commands Constructor",
  "description": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/xhellsdx/git-commands-constructor.git"
  },
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:gitCommandsConstructor.runCommand"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gitCommandsConstructor.runCommand",
        "title": "Git Commands Constructor: Run Command"
      }
    ],
    "configuration": {
      "title": "Git Commands Constructor",
      "properties": {
        "gitCommandsConstructor.taskPrefix": {
          "type": "string",
          "scope": "window",
          "default": "",
          "description": "Prefix of tasks of git branches. For example, if the task branch is called 'WMS-123', then you need to set the prefix as 'WMS'"
        },
        "gitCommandsConstructor.commands": {
          "type": "array",
          "scope": "window",
          "default": [],
          "description": "An array of git commands for construction",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["name", "code", "group"],
            "examples": [
              {
                "name": "Checkout to $CLIPBOARD_TASK",
                "code": "git checkout $CLIPBOARD_TASK",
                "group": "Commands for the task from the clipboard"
              }
            ],
            "properties": {
              "name": {
                "type": "string",
                "default": "",
                "minLength": 1,
                "examples": ["Checkout to $CLIPBOARD_TASK"],
                "description": "Name of the command to display"
              },
              "code": {
                "type": "string",
                "default": "",
                "minLength": 1,
                "examples": ["git checkout $CLIPBOARD_TASK"],
                "description": "Command code"
              },
              "group": {
                "type": "string",
                "default": "",
                "examples": ["Commands for the task from the clipboard"],
                "description": "Command group name"
              }
            }
          }
        },
        "gitCommandsConstructor.groupsOrder": {
          "type": "array",
          "scope": "window",
          "default": [],
          "description": "An array with sorted commands group names",
          "items": {
            "type": "string",
            "additionalProperties": false
          }
        }
      }
    }
  },
  "scripts": {
    "build": "vsce package",
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "lint:fix": "npm run lint -- --fix",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/uuid": "^8.3.4",
    "@types/vscode": "^1.71.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "prettier": "^2.7.1",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "vsce": "^2.11.0",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  }
}
